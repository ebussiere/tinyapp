<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <%if (!username) { %>
      <form class="form-inline" style="margin:0px;" action="/login" method="POST">

        <input class="form-control mr-sm-2" type="text" name="username" placeholder="username" style="width: 300px;">
        <button type="submit" class="btn btn-outline-light my-2 my-sm-0">Login</button>
      </form>
      <% } else {%>
      <form class="form-inline" style="margin:0px;" action="/logout" method="POST">
        <div class="nav-item nav-link text-white">Logged in as: <%= username %></div>
        <button type="submit" class="btn btn-outline-light my-2 my-sm-0">Logout</button>
      </form>
      <%}%>
    </div>
    </div>
  </nav>
</header>